<Window x:Class="PL.DroneShow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="DroneShow" Height="450" Width="800">
    <Grid Margin="0,0,0,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="277*"/>
            <ColumnDefinition Width="123*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="idLable" Content="Id" Margin="48,20,409,376"/>
        <Label x:Name="Batterylable" Content="Battery" Margin="48,246,409,150"/>
        <Label x:Name="WeightLable" Content="Maximum Weight" Margin="48,288,395,108"/>
        <Label x:Name="statuslablle" Content="Status" Margin="48,101,409,295"/>
        <Label x:Name="modelLable" Content="Model" Margin="49,60,408,336"/>
        <Label x:Name="latlable" Content="Latitude" Margin="49,153,408,243"/>
        <Label x:Name="label7" Content="Lomgtitude" Margin="49,202,407,194" RenderTransformOrigin="0,0"/>
        <ComboBox x:Name="WeightSelector" HorizontalAlignment="Left" Margin="194,292,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="LattextBox" HorizontalAlignment="Left" Margin="194,157,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.249,0.144"/>
        <TextBox x:Name="Lontextbox" HorizontalAlignment="Left" Margin="194,205,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="BatteryTextBox" HorizontalAlignment="Left" Margin="194,250,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="StatusSelector" HorizontalAlignment="Left" Margin="194,103,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="idtextbox" HorizontalAlignment="Left" Margin="194,24,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="modelTextbox" HorizontalAlignment="Left" Margin="194,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.202,0.976"/>
        <Button x:Name="AddUpdateButton" Content="Add" HorizontalAlignment="Left" Margin="21,62,0,0" VerticalAlignment="Top" Width="100" Click="button_Click" Grid.Column="1"/>
        <Button x:Name="DeliveryButton" Content="Next delivery step" Grid.Column="1" HorizontalAlignment="Left" Height="18" Margin="21,106,0,0" VerticalAlignment="Top" Width="100" Click="Button_Click_1"/>
        <Button x:Name="ChargingButton" Content="Charge/Discharge" Grid.Column="1" HorizontalAlignment="Left" Margin="21,147,0,0" VerticalAlignment="Top" Width="102" Click="ChargingButton_Click"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="390,381,0,0" VerticalAlignment="Top" Width="65" Click="Button_Click_2"/>

    </Grid>
</Window>
